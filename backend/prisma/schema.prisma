// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationTier {
  UNVERIFIED
  TIER_1 // Basic (ID verified)
  TIER_2 // Advanced (Bank/Address verified)
  TIER_3 // Premium (Background check)
}

model User {
  id               String           @id @default(uuid())
  email            String           @unique
  passwordHash     String
  displayName      String
  city             String?
  verificationTier VerificationTier @default(UNVERIFIED)
  verifiedAt       DateTime?
  tools            Tool[]
  bookings         Booking[]        @relation("RenterBookings")
  receivedBookings Booking[]        @relation("OwnerBookings")
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@map("users")
}

model Category {
  id        String     @id @default(uuid())
  name      String
  slug      String     @unique
  icon      String?
  parentId  String?
  parent    Category?  @relation("Subcategories", fields: [parentId], references: [id])
  children  Category[] @relation("Subcategories")
  tools     Tool[]
  createdAt DateTime   @default(now())

  @@map("categories")
}

model Tool {
  id               String    @id @default(uuid())
  name             String
  description      String
  categoryId       String
  category         Category  @relation(fields: [categoryId], references: [id])
  pricePerDay      Float
  replacementValue Float?
  condition        String?
  owner            User      @relation(fields: [ownerId], references: [id])
  ownerId          String
  latitude         Float?
  longitude        Float?
  images           String[]  @default([])
  isAvailable      Boolean   @default(true)
  bookings         Booking[]
  blocks           ToolDateBlock[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@map("tools")
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  COMPLETED
}

model Booking {
  id         String        @id @default(uuid())
  tool       Tool          @relation(fields: [toolId], references: [id])
  toolId     String
  renter     User          @relation("RenterBookings", fields: [renterId], references: [id])
  renterId   String
  owner      User          @relation("OwnerBookings", fields: [ownerId], references: [id])
  ownerId    String
  startDate  DateTime
  endDate    DateTime
  totalPrice Float
  status     BookingStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@map("bookings")
}

model ToolDateBlock {
  id        String   @id @default(uuid())
  toolId    String
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  date      DateTime @db.Date // The specific day being blocked
  reason    String?           // e.g., "maintenance", "vacation" (optional for future use)
  createdAt DateTime @default(now())

  // Ensure a tool can't have duplicate block entries for the exact same day
  @@unique([toolId, date]) 
  @@map("tool_date_blocks")
}


